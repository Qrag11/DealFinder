QWidget {
    background-color: #2b2b2b;
    color: #ffffff;
    font-size: 14px;
}

QLineEdit, QComboBox {
    padding: 6px;
    border: 1px solid #555;
    border-radius: 6px;
    background-color: #3c3f41;
}

QPushButton {
    padding: 10px;
    border: 1px solid #888;
    border-radius: 8px;
    background-color: #5a5a5a;
}

QPushButton:hover {
    background-color: #777;
}
